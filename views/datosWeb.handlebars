<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>Green Facility</title>
  </head>
  <body>
    <h1>Datos Web</h1>


    <div class="row">
        <div class="col-1"></div>
        
        <div class="col-10">

            <form method="POST" action="/datos-web">


                <h3>Encabezado:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">¿Qué hacemos?</label>
                    <input type="text" class="form-control" value="{{datosWeb.queHacemos}}" name="queHacemos" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">¿Quiénes somos?</label>
                    <input type="text" class="form-control" value="{{datosWeb.quienesSomos}}" name="quienesSomos" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Consulta gratis:</label>
                    <input type="text" class="form-control" value="{{datosWeb.consultaGratis}}" name="consultaGratis" aria-describedby="emailHelp">
                </div>
                <br>

                <h3>Servicios:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nuestros Servicios:</label>
                    <input type="text" class="form-control" value="{{datosWeb.nuestrosServicios}}" name="nuestrosServicios" aria-describedby="emailHelp">
                </div>
                <br>

                <h3>Proyectos:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nuestros Proyectos:</label>
                    <input type="text" class="form-control" value="{{datosWeb.galeriaProyectos}}" name="galeriaProyectos" aria-describedby="emailHelp">
                </div>
                <br>

                <h3>Contactanos:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">Contactanos:</label>
                    <input type="text" class="form-control" value="{{datosWeb.contactanos}}" name="contactanos" aria-describedby="emailHelp">
                </div>
                <br>
                
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>

        <div class="col-1"></div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    </body>
</html>