{{> head }}
    {{> menu }}

    <h1>Datos Empresa</h1>


    <div class="row">
        <div class="col-1"></div>
        
        <div class="col-10">

            <form method="POST" action="/datos-empresa">

                {{!-- Domicilio: --}}
                <h3>Domicilio:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">Calle:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.direccionCalle}}" name="direccionCalle" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Ciudad - Provincia:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.direccionCiudadProvincia}}" name="direccionCiudadProvincia" aria-describedby="emailHelp">
                </div>
                <br>

                {{!-- Horarios --}}
                <h3>Horario:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">Horario entre semana:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.horarioSemana}}" name="horarioSemana" aria-describedby="emailHelp">
                </div>
                
                <div class="form-group">
                    <label for="exampleInputEmail1">Horario especial:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.horarioEspecial}}" name="horarioEspecial" aria-describedby="emailHelp">
                </div>
                <br>

                {{!-- Datos de contacto --}}
                <h3>Datos de Contacto:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tel√©fono:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.infoContactoTelefono}}" name="infoContactoTelefono" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Email:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.infoContactoEmail}}" name="infoContactoEmail" aria-describedby="emailHelp">
                </div>
                <br>

                {{!-- Redes Sociales --}}
                <h3>Redes Sociales:</h3>
                <div class="form-group">
                    <label for="exampleInputEmail1">Facebook:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.redesFacebook}}" name="redesFacebook" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Instagram:</label>
                    <input type="text" class="form-control" value="{{datosEmpresa.redesInstagram}}" name="redesInstagram" aria-describedby="emailHelp">
                </div>
                <br>
                
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>

        <div class="col-1"></div>
    </div>

{{> footer}}