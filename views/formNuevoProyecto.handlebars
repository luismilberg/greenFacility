{{> head }}
{{> menu }}

<div class="container">
    <div class="row">
        <div class="col">
            <form action="/nuevo-proyecto" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Título:</label>
                    <input type="text" name="titulo" class="form-control">
                </div>

                <div class="form-group">
                    <label>Categorias:</label>
                    <select class="form-select" name="categoriaClase" aria-label="Default select example">

                        {{#if categorias.length}}
                            {{#each categorias}}
                                <option value="{{clase}}">{{titulo}}</option>
                            {{/each}}
                        {{/if}}
                    </select>

                <div class="form-group">
                    <label>Imágen:</label>
                    <input type="file" name="urlImagen" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>

{{> footer }}