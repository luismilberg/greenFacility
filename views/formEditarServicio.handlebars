{{> head }}
{{> menu}}

    <div class="container">
        <div class="row">
            <div class="col">
                <form action="/servicios/editar/{{_id}}" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Título:</label>
                        <input type="text" name="titulo" id="" class="form-control" value="{{titulo}}">
                    </div>
                    <div class="form-group">
                        <label>Descripción:</label>
                        <textarea name="descripcion" cols="30" rows="2" class="form-control">{{descripcion}}</textarea>
                    </div>
                    <div class="form-group">
                        <label>Imagen:</label>
                        <img src="/img/services/{{urlImagen}}" class="col-3 d-block">
                        <input type="file" name="urlImagen" class="form-control">
                    </div>
                    <input type="hidden" name="_id" value="{{_id}}">
                    <div class="form-group">
                        <input type="submit" value="GUARDAR" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>
            
{{> footer }}